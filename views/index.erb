<h1>Phone Book</h1>


<% if @contacts == [] %>
  <p>You have no contacts in your phone book.</p>
  <a href="/add_contact" type="button" class="btn btn-default">Add a Contact</a>
<% else %>
  <table class="table table-hover">
    <th>Your Contact List</th>
    <% @contacts.each() do |contact| %>
      <tr>
        <td><%= contact.name() %></td>
        <td>
          <form action="/<%= contact.id() %>" method="post">
            <button type='submit' class="btn btn-default btn-xs">Contact Details</button>
          </form>
        </td>
      </tr>
    <% end %>
  </table>
  <a href="/add_contact" type="button" class="btn btn-default">Add a Contact</a>
<% end %>
