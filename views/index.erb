<h1>Phone Book</h1>


<% if @contacts == [] %>
  <p>You have no contacts in your phone book.</p>
  <a href="/add_contact" type="button" class="btn btn-default">Add a Contact</a>
<% else %>
  <table class="table table-hover">
    <th>Your Contact List</th>
    <% @contacts.each() do |contact| %>
      <tr>
        <td><%= contact.name() %></td>
        <td><a href="/contact_details/<%= contact.id() %>">Contact Detais</a></td>
      </tr>
    <% end %>
  </table>
  <a href="/add_contact" type="button" class="btn btn-default">Add a Contact</a>
<% end %>
